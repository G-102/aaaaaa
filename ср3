#include<iostream>
#include<math.h>
using namespace std;
void main()
{
    locale::global(locale("rus")); //ето для учителя штоб по_РУСКи читал сиаут твой
    int pervoe,
        vtoroe,
        sredne_moduley,
        sredne;
    cout<<"Введите первое число ";  cin>>pervoe; cout<<endl;
    cout<<"Введите второе число ";  cin>>vtoroe;  cout<<endl;
    sredne=((pervoe*pervoe)+(vtoroe*vtoroe))/2;//вичисляєм квадрат
    sredne_moduley=(abs(pervoe)+abs(vtoroe))/2;//вичисляєм модули
    cout<<"Средне арифмет. их квадратов "<<sredne<<endl;
    cout<<"Средне арифмет. их модулей "<<sredne_moduley<<endl;
